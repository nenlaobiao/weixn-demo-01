.box view{

  width: 150rpx;
  height: 150rpx;
  line-height: 150rpx;
  text-align: center;
  color:#fff
}
.box view:nth-child(1){
  background-color:lightcoral;
}
.box view:nth-child(2){
  background-color: lightgreen;
}
.box view:nth-child(3){
  background-color: lightskyblue;
}
.box{
  margin: 40rpx 0;
  display: flex;
  justify-content: space-evenly;
}
.scroll{
  width: 300rpx;
  height: 500rpx;
  margin: 0 auto;
}
.swiper swiper-item:nth-child(1) view,
.swiper swiper-item:nth-child(4) view,
.scroll view:nth-child(4),
.scroll view:nth-child(1){
  background-color:lightcoral;
}
.swiper swiper-item:nth-child(2) view,
.swiper swiper-item:nth-child(5) view,
.scroll view:nth-child(5),
.scroll view:nth-child(2){
  background-color: lightgreen;
}
.swiper swiper-item:nth-child(3) view,
.swiper swiper-item:nth-child(6) view,
.scroll view:nth-child(6),
.scroll view:nth-child(3){
  background-color: lightskyblue;
}
.swiper{
  height: 300rpx;
  margin-top: 40rpx;
}
.swiper view{
  width: 100%;
  height: 300rpx;
  line-height: 300rpx;
  text-align: center;
  color:#fff
}
